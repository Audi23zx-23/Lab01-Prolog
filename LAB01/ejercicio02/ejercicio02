escala(X, Y, Z) :- (ciudad(X), ciudad(Y), ciudad(Z), vuelo(X, Y), vuelo(Y, Z)).

verificacion(X, _, Y) :- (vuelo(X, Y), ciudad(X), ciudad(Y)).
verificacion(X, Y, Z) :- (ciudad(X), ciudad(Y), ciudad(Z), vuelo(X, Y), vuelo(Y, Z)).

destinos(X, Y) :- (vuelo(X, Y), ciudad(X), ciudad(Y)).
